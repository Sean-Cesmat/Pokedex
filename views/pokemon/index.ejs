<%- include ../partials/head %>
<body>
  <%- include ../partials/header %>
  <div class="container">
    <div class="row">
      <h3>Your Favorites</h3>
      <a href="/"><h5>ADD MORE!</h5></a>

    </div>
    <% pokemon.forEach(function(pokemon, id) { %>
      <% if (id % 3 === 0 || id ===0 ) { %>
        <div class="row">
      <% } %>
        <div class="col s12 m4">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title"><%= pokemon.name %></span>
              <!-- <p>I am a very simple card. I am good at containing small bits of information.
              I am convenient because I require little markup to use effectively.</p> -->
              <a href="/pokemon/<%= pokemon.name %>" class="single-pokemon waves-effect waves-light small-btn btn" data-pokemon="<%= pokemon.name %>">View More</a>
            </div>
            <i class="material-icons pokeball-dot z-depth-2">brightness_1</i>
            <div class="card-action center-align">
              <a href="#" class="delete-favorite" data-pokemon="<%= pokemon.name %>"><i class="material-icons right">delete_forever</i>Remove Favorite</a>
            </div>
          </div>
        </div>
      <% if ((id + 1) % 3 === 0 ) { %>
        </div>
      <% } %>
    <% }); %>

  </div>



<%- include ../partials/footer %>
